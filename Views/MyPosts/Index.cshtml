@model List<NewsModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
   
}

@if(Model.Any()){
    <div class="text-center">
        <h3>Meus posts</h3>
    </div>
    @if(TempData["deleteError"] != null)
    {
        <div class="alert alert-danger">
            @TempData["deleteError"];
        </div>
    }

    @if (TempData["deleteSuccess"] != null)
    {
        <div class="alert alert-warning">
            @TempData["deleteSuccess"]
        </div>
    }
    <table class="table table-striped table-hover table-sm">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Titulo</th>
                <th scope="col">Descrição</th>
                <th></th>
            </tr>
        </thead>
        @foreach (NewsModel post in Model)
        {
                <tr>
                    <td>@post.Id</td>
                    <td>@post.Title</td>
                    <td>@post.Description</td>
                    <td>
                        <a asp-controller="ShowPost" asp-controller="Index" asp-route-id=@post.Id class="btn btn-primary">Editar</a>
                        <a class="btn btn-danger" asp-controller="MyPosts" asp-action="DeleteNews" asp-route-id=@post.Id>Excluir</a>
                    </td>
                </tr>
        }
    </table>
}else
{
    <h1>Não há registros atualmente.</h1>
}

